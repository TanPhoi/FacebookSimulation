<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="childSupport"
            type="com.phoint.facebooksimulation.data.local.model.ChildSupport" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:backgroundTint="#1B1B1B"
        app:cardCornerRadius="6dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/childCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#3C3C3C">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8.6dp">

                <ImageView
                    android:id="@+id/imgIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/ic_friend_blue" />

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_toRightOf="@id/imgIcon"
                    android:text="@{childSupport.title}"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="Thông tin &amp; nguồn lực cho cộng đồng" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </com.google.android.material.card.MaterialCardView>
</layout>