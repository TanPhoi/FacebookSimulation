<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:src="@drawable/ic_done_success" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:gravity="center"
                android:text="Cảm ơn bạn đã cho chúng tôi biết."
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:gravity="center"
                android:text="Chúng tôi sẽ gửi thông báo để bạn xem kết quả trong Hộp thư hỗ trợ trong thời gian sớm nhất có thế."
                android:textColor="#A5A5A5"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btnUndoNewspaper"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvSentFacebook"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="4dp"
                    android:background="@drawable/background_posts_reels"
                    android:drawableLeft="@drawable/ic_trash"
                    android:drawablePadding="4dp"
                    android:gravity="center"
                    android:padding="6dp"
                    android:text="Hoàn tác báo cáo"
                    android:textColor="#3BA6FB"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/btnMoreReason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvSentFacebook"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="4dp"
                    android:background="@drawable/background_posts_reels"
                    android:drawableLeft="@drawable/ic_add"
                    android:drawablePadding="4dp"
                    android:gravity="center"
                    android:padding="6dp"
                    android:text="Thêm lí do"
                    android:textColor="#3BA6FB"
                    android:textSize="10sp" />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Ẩn bớt nội dung tương tự"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvBlock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="4dp"
                    android:drawableLeft="@drawable/ic_unfriend"
                    android:drawablePadding="2dp"
                    android:padding="6dp"
                    android:text="Chặn trang cá nhân của"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvBlock"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="34dp"
                    android:layout_marginTop="-10dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="4dp"
                    android:text="Các bạn sẽ không thể nào nhìn thấy hoặc liên hệ với nhau"
                    android:textColor="#9C9C9C"
                    android:textSize="10sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvHideAll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="4dp"
                    android:drawableLeft="@drawable/ic_hide_all_user"
                    android:drawablePadding="2dp"
                    android:padding="6dp"
                    android:text="Ẩn tất cả từ..."
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvHideAll"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="34dp"
                    android:layout_marginTop="-10dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="4dp"
                    android:text="Không xem bài viết từ người này nữa"
                    android:textColor="#9C9C9C"
                    android:textSize="10sp" />
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
</layout>