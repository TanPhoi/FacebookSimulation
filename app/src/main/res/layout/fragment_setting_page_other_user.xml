<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:padding="2dp"
        tools:context=".ui.settingPageOtherUser.SettingPageOtherUserFragment">

        <com.phoint.facebooksimulation.ui.widget.ActionBarPost
            android:id="@+id/abSettingUser"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_alignParentTop="true"
            app:action_bar_post_src_left="@drawable/ic_back"
            app:action_bar_post_src_left_enable="true"
            app:action_bar_post_title="Cài đặt trang cá nhân"
            app:action_bar_post_title_enable="true" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/abSettingUser"
            android:background="#222222" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/view">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background"
                android:elevation="2dp"
                android:orientation="vertical"
                android:padding="2dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:drawableLeft="@drawable/ic_follow"
                    android:drawablePadding="4dp"
                    android:gravity="left|center"
                    android:padding="4dp"
                    android:text="Theo dỗi"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="44dp"
                    android:layout_marginRight="8dp"
                    android:background="#3C3C3C" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:drawableLeft="@drawable/ic_character_math_question"
                    android:drawablePadding="4dp"
                    android:gravity="left|center"
                    android:padding="4dp"
                    android:text="Báo cáo trang cá nhân"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="44dp"
                    android:layout_marginRight="8dp"
                    android:background="#3C3C3C" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="44dp"
                    android:layout_marginRight="8dp"
                    android:background="#3C3C3C" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:drawableLeft="@drawable/ic_unfriend"
                    android:drawablePadding="4dp"
                    android:gravity="left|center"
                    android:padding="4dp"
                    android:text="Chặn"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="44dp"
                    android:layout_marginRight="8dp"
                    android:background="#3C3C3C" />

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
</layout>