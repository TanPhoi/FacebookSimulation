<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:orientation="vertical">

        <View
            android:layout_width="50dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_margin="6dp"
            android:background="#474747" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_margin="8dp"
            android:background="@drawable/background_border_gray"
            android:backgroundTint="@color/background">

            <TextView
                android:id="@+id/tvPinPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:drawableLeft="@drawable/ic_post_pins"
                android:drawablePadding="2dp"
                android:text="Bài viết đã ghim"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgUser"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_below="@id/tvPinPost"
                android:layout_alignParentStart="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="#C1C1C1"
                android:elevation="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_user"
                app:shapeAppearanceOverlay="@style/Circular" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvPinPost"
                android:layout_marginTop="12dp"
                android:layout_marginRight="4dp"
                android:layout_toRightOf="@id/imgUser"
                android:text="Nguyễn Tấn Phôi"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvPermission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvName"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:layout_toEndOf="@id/imgUser"
                android:background="@drawable/background_white_border"
                android:drawableLeft="@drawable/ic_permission_public"
                android:drawableRight="@drawable/ic_show_permission"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:padding="2dp"
                android:text="Công khai"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/edtContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgUser"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@null"
                android:hint="Hãy nói gì đó về nội dung này..."
                android:textColor="#FFFFFF"
                android:textColorHint="#989898"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/btnShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtContent"
                android:layout_alignParentRight="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/background_btn_profile"
                android:backgroundTint="#167ACA"
                android:gravity="center"
                android:padding="6dp"
                android:text="Chia sẻ ngay"
                android:textColor="#F8FAFB"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>
</layout>