<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:padding="2dp"
        tools:context=".ui.settingPageUser.SettingPageUserFragment">

        <com.phoint.facebooksimulation.ui.widget.ActionBarPost
            android:id="@+id/abSettingUser"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_alignParentTop="true"
            app:action_bar_post_src_left="@drawable/ic_back"
            app:action_bar_post_src_left_enable="true"
            app:action_bar_post_title="Cài đặt trang cá nhân"
            app:action_bar_post_title_enable="true" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/abSettingUser"
            android:background="#2B2A2A" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/view">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background"
                android:elevation="2dp"
                android:orientation="vertical"
                android:padding="2dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:drawableLeft="@drawable/ic_follow"
                    android:drawablePadding="4dp"
                    android:gravity="left|center"
                    android:padding="4dp"
                    android:text="Cài đặt theo dỗi"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="44dp"
                    android:layout_marginRight="8dp"
                    android:background="#3C3C3C" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:drawableLeft="@drawable/ic_character_math_question"
                    android:drawablePadding="4dp"
                    android:gravity="left|center"
                    android:padding="4dp"
                    android:text="Trạng thái tài khoản"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="44dp"
                    android:layout_marginRight="8dp"
                    android:background="#3C3C3C" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:drawableLeft="@drawable/ic_archives"
                    android:drawablePadding="4dp"
                    android:gravity="left|center"
                    android:padding="4dp"
                    android:text="Kho lưu trữ"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="44dp"
                    android:layout_marginRight="8dp"
                    android:background="#3C3C3C" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:drawableLeft="@drawable/ic_see"
                    android:drawablePadding="4dp"
                    android:gravity="left|center"
                    android:padding="4dp"
                    android:text="Chế độ xem"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="44dp"
                    android:layout_marginRight="8dp"
                    android:background="#3C3C3C" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:drawableLeft="@drawable/ic_menu"
                    android:drawablePadding="4dp"
                    android:gravity="left|center"
                    android:padding="4dp"
                    android:text="Nhật ký hoạt động"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="44dp"
                    android:layout_marginRight="8dp"
                    android:background="#3C3C3C" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:drawableLeft="@drawable/ic_setting_user"
                    android:drawablePadding="4dp"
                    android:gravity="left|center"
                    android:padding="4dp"
                    android:text="Cài đặt trang cá nhân và gắn thẻ"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="44dp"
                    android:layout_marginRight="8dp"
                    android:background="#3C3C3C" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:drawableLeft="@drawable/ic_posts"
                    android:drawablePadding="4dp"
                    android:gravity="left|center"
                    android:padding="4dp"
                    android:text="Xem lại bài viết và thẻ"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="44dp"
                    android:layout_marginRight="8dp"
                    android:background="#3C3C3C" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:drawableLeft="@drawable/ic_privacy"
                    android:drawablePadding="4dp"
                    android:gravity="left|center"
                    android:padding="4dp"
                    android:text="Trung tâm quyền riêng tư"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="44dp"
                    android:layout_marginRight="8dp"
                    android:background="#3C3C3C" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:drawableLeft="@drawable/ic_search"
                    android:drawablePadding="4dp"
                    android:gravity="left|center"
                    android:padding="4dp"
                    android:text="Tìm kiếm"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="44dp"
                    android:layout_marginRight="8dp"
                    android:background="#3C3C3C" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="44dp"
                    android:layout_marginRight="8dp"
                    android:background="#3C3C3C" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:drawableLeft="@drawable/ic_regime"
                    android:drawablePadding="4dp"
                    android:gravity="left|center"
                    android:padding="4dp"
                    android:text="Bật chế độ chuyên nghiệp"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="#3C3C3C" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</layout>