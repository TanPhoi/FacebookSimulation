<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".ui.photoPrewiew.PhotoPreviewFragment">

        <com.phoint.facebooksimulation.ui.widget.ActionBarPost
            android:id="@+id/abPhotoPreview"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:action_bar_post_btn="Lưu"
            app:action_bar_post_btn_enable="true"
            app:action_bar_post_src_left="@drawable/ic_back"
            app:action_bar_post_src_left_enable="true"
            app:action_bar_post_title="Xem trước ảnh đại diện"
            app:action_bar_post_title_enable="true" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/abPhotoPreview"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="#2C2C2C" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgUser"
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:layout_below="@id/view"
            android:layout_centerInParent="true"
            android:layout_marginTop="80dp"
            android:background="#979797"
            android:elevation="4dp"
            android:scaleType="center"
            android:src="@drawable/ic_avatar_user"
            app:shapeAppearanceOverlay="@style/Circular"
            tools:ignore="MissingConstraints" />

    </RelativeLayout>
</layout>