<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:src="@drawable/ic_done_success" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:gravity="center"
                android:text="Cảm ơn bạn đã báo cáo."
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:gravity="center"
                android:text="Ý kiến đóng góp của bạn giúp hệ thống của chúng tôi biết khi có gì đó không ổn."
                android:textColor="#A5A5A5"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginTop="8dp"
                android:background="#E6E6E6" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Các bước khác mà bạn có thể thực hiện"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvBlock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="4dp"
                    android:drawableLeft="@drawable/ic_unfriend"
                    android:drawablePadding="2dp"
                    android:padding="6dp"
                    android:text="Chặn trang cá nhân của..."
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvBlock"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="34dp"
                    android:layout_marginTop="-10dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="4dp"
                    android:text="Các bạn sẽ không thể nào nhìn thấy hoặc liên hệ với nhau"
                    android:textColor="#9C9C9C"
                    android:textSize="10sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvHideAll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="4dp"
                    android:drawableLeft="@drawable/ic_hide_all_user"
                    android:drawablePadding="2dp"
                    android:padding="6dp"
                    android:text="Ẩn tất cả từ..."
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvHideAll"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="34dp"
                    android:layout_marginTop="-10dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="4dp"
                    android:text="Không xem bài viết từ người này nữa"
                    android:textColor="#9C9C9C"
                    android:textSize="10sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvSentFacebook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="4dp"
                    android:drawableLeft="@drawable/ic_document"
                    android:drawablePadding="2dp"
                    android:padding="6dp"
                    android:text="Đã gửi cho Facebook xem xét"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvSentFacebook"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="34dp"
                    android:layout_marginTop="-10dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="4dp"
                    android:text="Bạn đã gửi một báo cáo"
                    android:textColor="#9C9C9C"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/btnUndo"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvSentFacebook"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="34dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/background_posts_reels"
                    android:gravity="center"
                    android:padding="6dp"
                    android:text="Hoàn tác"
                    android:textColor="#3BA6FB"
                    android:textSize="10sp" />
            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/btnDone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayout"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="200dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/background_btn_profile"
            android:backgroundTint="#2892E6"
            android:gravity="center"
            android:padding="4dp"
            android:text="Xong"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />
    </RelativeLayout>
</layout>