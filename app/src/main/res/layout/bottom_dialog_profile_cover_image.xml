<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical"
    android:padding="2dp">

    <View
        android:layout_width="50dp"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:layout_margin="6dp"
        android:background="#474747" />

    <TextView
        android:id="@+id/btnSendImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:drawableLeft="@drawable/ic_image"
        android:drawablePadding="4dp"
        android:gravity="left|center"
        android:padding="4dp"
        android:text="Xem ảnh bìa"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/btnAvatarFacebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:drawableLeft="@drawable/ic_avatar"
        android:drawablePadding="4dp"
        android:gravity="left|center"
        android:padding="4dp"
        android:text="Dùng ảnh bìa bằng avatar"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/btnCoverImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:drawableLeft="@drawable/ic_upload_image"
        android:drawablePadding="4dp"
        android:gravity="left|center"
        android:padding="4dp"
        android:text="Tải ảnh lên"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/btnImageFacebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:drawableLeft="@drawable/ic_image_facebook"
        android:drawablePadding="4dp"
        android:gravity="left|center"
        android:padding="4dp"
        android:text="Chọn ảnh trên Facebook"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/btnCreateTeamImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:drawableLeft="@drawable/ic_menu_image"
        android:drawablePadding="4dp"
        android:gravity="left|center"
        android:padding="4dp"
        android:text="Tạo nhóm hình ảnh"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />
</LinearLayout>