<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical"
        android:padding="2dp">

        <View
            android:layout_width="50dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_margin="6dp"
            android:background="#474747" />

        <TextView
            android:id="@+id/btnImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:drawablePadding="6dp"
            android:gravity="left|center"
            android:padding="4dp"
            android:text="Ảnh/video"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:drawableLeftCompat="@drawable/ic_image"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:drawablePadding="6dp"
            android:gravity="left|center"
            android:padding="4dp"
            android:text="Gắn thẻ người khác"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:drawableLeftCompat="@drawable/ic_friend_blue"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:drawablePadding="6dp"
            android:gravity="left|center"
            android:padding="4dp"
            android:text="Cảm xúc/hoạt động"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:drawableLeftCompat="@drawable/ic_feeling"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:drawablePadding="6dp"
            android:gravity="left|center"
            android:padding="4dp"
            android:text="Check in"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:drawableLeftCompat="@drawable/ic_check_in"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:drawablePadding="6dp"
            android:gravity="left|center"
            android:padding="4dp"
            android:text="Video trực tiếp"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:drawableLeftCompat="@drawable/ic_video"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:drawablePadding="6dp"
            android:gravity="left|center"
            android:padding="4dp"
            android:text="Màu nền"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:drawableLeftCompat="@drawable/ic_color"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <TextView
            android:id="@+id/btnCamera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:drawablePadding="6dp"
            android:gravity="left|center"
            android:padding="4dp"
            android:text="Camera"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:drawableLeftCompat="@drawable/ic_camera"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:drawablePadding="6dp"
            android:gravity="left|center"
            android:padding="4dp"
            android:text="File GIF"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:drawableLeftCompat="@drawable/ic_gif"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:drawablePadding="6dp"
            android:gravity="left|center"
            android:padding="4dp"
            android:text="Nhạc"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:drawableLeftCompat="@drawable/ic_music"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:drawablePadding="6dp"
            android:gravity="left|center"
            android:padding="4dp"
            android:text="Màu nền"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:drawableLeftCompat="@drawable/ic_event_red"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:drawablePadding="6dp"
            android:gravity="left|center"
            android:padding="4dp"
            android:text="Avatar của bạn"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:drawableLeftCompat="@drawable/ic_avatar"
            tools:ignore="HardcodedText,RtlHardcoded" />

    </LinearLayout>
</layout>
